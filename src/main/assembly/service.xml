<assembly>
	<id>service</id>
	<formats>
		<format>zip</format>
	</formats>
    <componentDescriptors>
        <componentDescriptor>src/main/assembly/binaries.xml</componentDescriptor>
    </componentDescriptors>	
	<dependencySets>
		<dependencySet>
			<outputDirectory>/libs/service</outputDirectory>
			<includes>
				<include>org.mortbay.jetty:jetty</include>
                <include>org.mortbay.jetty:jetty-util</include>
                <include>org.mortbay.jetty:servlet-api</include>
			</includes>
		</dependencySet>			
	</dependencySets>
	<files>	
	    <!-- template -->
        <file>
            <source>src/main/assembly/template/wservice</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>                
        <file>
            <source>src/main/assembly/template/wservice.bat</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
            <lineEnding>crlf</lineEnding>            
        </file>
        <file>
            <source>src/main/assembly/template/README-service.txt</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
            <lineEnding>crlf</lineEnding>            
        </file>                
        <file>
            <source>src/main/assembly/template/docs/licenses/jetty-LICENSE.txt</source>
            <outputDirectory>/docs/licenses</outputDirectory>
            <lineEnding>crlf</lineEnding>            
        </file>                     
        <file>
            <source>src/main/assembly/template/docs/licenses/jetty-NOTICE.txt</source>
            <outputDirectory>/docs/licenses</outputDirectory>
            <lineEnding>crlf</lineEnding>            
        </file>
        <file>
            <source>src/main/assembly/template/docs/licenses/servlet-api-LICENSE.txt</source>
            <outputDirectory>/docs/licenses</outputDirectory>
            <lineEnding>crlf</lineEnding>
        </file>
	</files>
</assembly>
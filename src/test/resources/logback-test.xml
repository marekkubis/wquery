<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level [%logger{0}] %msg%n</pattern>
        </encoder>
    </appender>

    <root level="${org.wquery.log.level:-error}">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
